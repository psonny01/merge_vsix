<UserControl x:Class="merge_vsix.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Margin="10">
            <!-- From Branch -->
            <TextBlock Text="From Branch:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="FromBranchCombo" Width="300" Height="25" Margin="0,0,0,10"/>

            <!-- To Branch -->
            <TextBlock Text="To Branch:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ToBranchCombo" Width="300" Height="25" Margin="0,0,0,10"/>

            <!-- Merge Button -->
            <Button Content="Merge" Width="100" Height="30" />
        </StackPanel>
    </Grid>
</UserControl>
